<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.1.xsd">

	<module name="gst" package="com.axelor.gst.db" />

	<entity name="Invoice">
        <string name="status" readonly="true" selection="gst.invoice.status.selection"/>
        <many-to-one name="company" ref="Company" required="true"/>
        <string name="reference" readonly="true"/>
        <datetime name="dt" title="Date"/>
        <integer name="priority"/>
        <many-to-one name="party" ref="Party" required="true"/>
        <many-to-one name="partyContact" ref="Contact" />
        <many-to-one name="invoiceAddress" ref="Address" required="true"/>
        <many-to-one name="shippingAddress" ref="Address"/>
        <boolean name="isInvoiceAddress" title="Invoice Address" default="true"/>
        <decimal name="netAmount" title="Net Amount" readonly="true"/>
        <decimal name="netIgst" title="Net IGST" readonly="true"/>
        <decimal name="netCgst" title="Net CGST" readonly="true"/>
        <decimal name="netSgst" title="Net SGST" readonly="true"/>
        <decimal name="grossAmount" title="Gross Amount" readonly="true"/>
        <one-to-many name="invoiceItemsList" ref="InvoiceLine"/>
	</entity>

</domain-models>
