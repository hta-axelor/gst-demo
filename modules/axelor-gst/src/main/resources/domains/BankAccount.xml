<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.1.xsd">

  <module name="gst" package="com.axelor.gst.db"/>

  <entity name="BankAccount"> 
    <string name="bank" required="true"/>
    <string name="type" selection="gst.bank.account.type.selection" default="1"/>
    <string name="ifsc" title="IFSC" required="true"/>
    <string name="accountNo" title="Account No." required="true"/>
    <string name="address"/>
    
    <extra-code><![CDATA[
		  public static final int BANK_ACCOUNT_CURRENT = 1;
		  public static final int BANK_ACCOUNT_SAVINGS = 2;
		]]></extra-code>
		
  </entity>

</domain-models>
