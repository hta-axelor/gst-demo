<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.0.xsd">

  <module name="gst" package="com.axelor.gst.db"/>

  <entity name="Party"> 
    <string name="reference" title="Reference" readonly="true"/>
    <string name="name" title="Name" required="true"/>
    <string name="type" selection="gst.party.type.selection" default="1" required="true"/>
    <boolean name="isCustomer" title="Customer"/>
    <boolean name="isSupplier" title="Supplier"/>
    <string name="gstin" title="GSTIN"/>
    <one-to-many name="contactList" ref="Contact"/>
    <one-to-many name="addressList" ref="Address"/>
    
    <extra-code><![CDATA[
		  public static final String PARTY_COMPANY = "1";
		  public static final String PARTY_INDIVIDUAL = "2";
		]]></extra-code>
    
  </entity>

</domain-models>
