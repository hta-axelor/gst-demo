<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<form name="invoice-form-popup" title="Invoice" model="com.axelor.gst.db.Invoice"
		canNew="false" canEdit="false" canSave="false" canDelete="false"
		onNew="action-gst-record-invoice-form-default">
		<panel>
			<field name="company" />
			<field name="party"	canEdit="false" />
		</panel>
		<panel>
			<button name="show_invoice" icon="fa-rocket" title="Show Invoice"
				onClick="action-gst-method-product-create-invoices" />
		</panel>
	</form>

</object-views>
