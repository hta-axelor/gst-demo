<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<grid name="party-grid" title="Party" model="com.axelor.gst.db.Party">
		<field name="name" />
		<field name="type" />
		<field name="customer" />
		<field name="supplier" />
		<field name="gstin"/>
	</grid>

	<form name="party-form" title="Party" model="com.axelor.gst.db.Party">
		<panel>
			<field name="name"/>
			<field name="type"/>
			<field name="customer" />
			<field name="supplier" />
			<field name="gstin"/>
		</panel>
		<panel-related field="contactList" form-view="contact-form"
			title="Contacts">
			<field name="name" />
			<field name="type" />
			<field name="primaryEmail" />
			<field name="secondaryEmail" />
			<field name="primaryPhone" />
			<field name="secondaryPhone" />
		</panel-related>
		<panel-related field="addressList" form-view="address-form"
			title="Address">
			<field name="type" />
			<field name="line1" />
			<field name="line2" />
			<field name="category" />
			<field name="city" />
			<field name="state" />
			<field name="country" />
			<field name="pincode" />
		</panel-related>
	</form>

	<cards name="gst-party-cards" title="Cards View" model="com.axelor.gst.db.Party"
		orderBy="name">
		<field name="name" />
		<field name="type" />
		<field name="addressList" />
		<template><![CDATA[
 		 <div class="span4 card-image">
   		   <strong>{{name}}</strong>
         </div>
         <div class="span8">
          <addressList>
            <strong>{{type}} </strong>
            <stong>{{}}
            <br>
               
            <br>
          </addressList>
         </div>
        ]]></template>
	</cards>

</object-views>
