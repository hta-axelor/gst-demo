<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<grid name="address-grid" title="Address" model="com.axelor.gst.db.Address">
		<field name="type" />
		<field name="line1" />
		<field name="line2" />
		<field name="city" />
		<field name="state" />
		<field name="country" />
		<field name="pincode" />
	</grid>

	<form name="address-form" title="Address" model="com.axelor.gst.db.Address">
		<panel>
			<field name="type" required="true" />
			<field name="line1" required="true" />
			<field name="line2" />
			<field name="category" />
			<field name="city" required="true" />
			<field name="state" />
			<field name="country" required="true" />
			<field name="pincode" />
		</panel>
	</form>

	<selection name="gst.address.type.selection">
		<option value="defualt">Default</option>
		<option value="invoice">Invoice</option>
		<option value="shipping">Shipping</option>
		<option value="other">Other</option>
	</selection>

	<form name="addressList-form-popup" title="Address"
		model="com.axelor.gst.db.Address">
		<panel title="Overview">
			<field name="type" required="true" />
			<field name="line1" required="true" />
			<field name="line2" />
			<field name="category" />
			<field name="city" required="true" />
			<field name="state" />
			<field name="country" required="true" />
			<field name="pincode" />
		</panel>
	</form>

</object-views>
