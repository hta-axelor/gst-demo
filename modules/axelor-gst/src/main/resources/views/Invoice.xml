<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<grid name="invoice-grid" title="Invoice" model="com.axelor.gst.db.Invoice">
		<field name="company" />
		<field name="reference" />
		<field name="invoiceDate" expr="eval: __time__" />
		<field name="party" />
		<field name="statusSelect" />
	</grid>

	<form name="invoice-form" title="Invoice" model="com.axelor.gst.db.Invoice">
		<panel>
			<field name="statusSelect" widget="NavSelect" colSpan="12"/>
		</panel>
		<panel>
			<field name="company" readonlyIf="invoiceItemsList.length > 0"/>
			<field name="reference" />
			<field name="invoiceDate" />
			<field name="priority" />
			<field name="party" readonlyIf="invoiceItemsList.length > 0"
				onChange="action-gst-record-invoice-calculate-party-values,action-gst-record-invoice-calculate-shipping-address" />
			<field name="partyContact" />
			<field name="invoiceAddress"
				onChange="action-gst-record-invoice-calculate-shipping-address" />
			<field name="shippingAddress" />
			<field name="isInvoiceAddress"
				onChange="action-gst-record-invoice-calculate-shipping-address" />
			<field name="netAmount" />
			<field name="netIgst" />
			<field name="netCgst" />
			<field name="netSgst" />
			<field name="grossAmount" />
		</panel>
		<panel-related field="invoiceItemsList" form-view="invoice-line-form"
			onChange="action-gst-record-invoice-form-calculate-invoice-items">
			<field name="product" />
			<field name="hsbn" />
			<field name="item" />
			<field name="qty" />
			<field name="price" />
			<field name="netAmount" />
			<field name="gstRate" />
			<field name="igst" />
			<field name="cgst" />
			<field name="sgst" />
			<field name="grossAmount" />
		</panel-related>
		<panel sidebar="true">
			<button name="validateBtn" title="Validate"
				onClick="action-gst-record-invoice-validate,save" hidden="true"
				showIf="statusSelect == 1" />
		</panel>
	</form>

	<action-record name="action-gst-record-invoice-form-calculate-invoice-items"
		model="com.axelor.gst.db.Invoice">
		<field name="netAmount" expr="eval:invoiceItemsList.sum{it->it.netAmount}" />
		<field name="gstRate" expr="eval:invoiceItemsList.sum{it->it.gstRate}" />
		<field name="netIgst" expr="eval:invoiceItemsList.sum{it->it.igst}" />
		<field name="netCgst" expr="eval:invoiceItemsList.sum{it->it.cgst}" />
		<field name="netSgst" expr="eval:invoiceItemsList.sum{it->it.sgst}" />
		<field name="grossAmount" expr="eval:invoiceItemsList.sum{it->it.grossAmount}" />
	</action-record>

	<action-record name="action-gst-record-invoice-calculate-shipping-address"
		model="com.axelor.gst.db.Invoice">
		<field name="shippingAddress" expr="eval: invoiceAddress" if="isInvoiceAddress" />
		<field name="shippingAddress" expr="" if="!isInvoiceAddress" />
	</action-record>

	<action-record name="action-gst-record-invoice-calculate-party-values"
		model="com.axelor.gst.db.Invoice">
		<field name="invoiceAddress" expr="eval: party?.addressList[0]"
			if="party &amp;&amp; party?.addressList" />
		<field name="partyContact" expr="eval: party?.contactList[0].name"
			if="party &amp;&amp; party?.contactList &amp;&amp; party?.contactList[0].name" />
	</action-record>

	<action-record name="action-gst-record-invoice-validate"
		model="com.axelor.gst.db.Invoice">
		<field name="statusSelect" expr="eval: InvoiceRepository.STATUS_VALIDATED" />
	</action-record>

</object-views>
