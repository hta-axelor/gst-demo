<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<grid name="invoice-grid" title="Invoice" model="com.axelor.gst.db.Invoice"
		onNew="action-gst-record-invoice-form-default">
		<field name="company" />
		<field name="reference" />
		<field name="invoiceDate" />
		<field name="party" />
		<field name="statusSelect" />
	</grid>

	<kanban name="invoice-kanban" title="Invoice Kanban" model="com.axelor.gst.db.Invoice"
		columnBy="statusSelect" sequenceBy="priority">
		<field name="reference" />
		<field name="company" />
		<field name="party" />

		<template><![CDATA[
		    <h4>{{reference}}</h4>
  			<h4>{{statusSelect}}</h4>
  			<h4>{{company.name}}</h4>
  			<h4>{{party.name}}</h4>
  		]]></template>
	</kanban>

	<form name="invoice-form" title="Invoice" model="com.axelor.gst.db.Invoice"
		onNew="action-gst-record-invoice-form-default,action-gst-record-get-invoice-details">
		<toolbar>
			<button name="invoice_form_print_btn" icon="fa-print" title="Report"
				onClick="action-gst-validate-invoice,save,action-gst-method-invoice-set-attachment-path,action-gst-report-invoice"
				showIf="id" />
		</toolbar>
		<panel>
			<field name="statusSelect" widget="NavSelect" colSpan="12" />
		</panel>
		<panel>
			<field name="company" readonlyIf="invoiceItemsList.length > 0"
				canEdit="false" />
			<field name="reference" />
			<field name="invoiceDate" />
			<field name="party" readonlyIf="invoiceItemsList.length > 0"
				onChange="action-gst-record-invoice-calculate-party-values,action-gst-method-invoice-calculate-shipping-address"
				canEdit="false" />
			<field name="partyContact" />
			<field name="invoiceAddress"
				onChange="action-gst-method-invoice-calculate-shipping-address" />
			<field name="shippingAddress" />
			<field name="isInvoiceAddress"
				onChange="action-gst-method-invoice-calculate-shipping-address" />
			<field name="netAmount" />
			<field name="netIgst" />
			<field name="netCgst" />
			<field name="netSgst" />
			<field name="grossAmount" />
		</panel>
		<panel-related field="invoiceItemsList" form-view="invoice-line-form"
			onChange="action-gst-method-invoice-calculate-invoice-items"
			readonlyIf="statusSelect == 3">
			<field name="product" />
			<field name="hsbn" />
			<field name="item" />
			<field name="qty" />
			<field name="price" />
			<field name="netAmount" />
			<field name="gstRate" />
			<field name="igst" />
			<field name="cgst" />
			<field name="sgst" />
			<field name="grossAmount" />
		</panel-related>
		<panel sidebar="true">
			<button name="validateBtn" title="Validate"
				onClick="action-gst-validate-invoice,action-gst-method-invoice-get-reference,action-gst-record-invoice-validate,save,action-gst-attrs-invoice-validate"
				hidden="true" showIf="statusSelect == 1" />
			<button name="paidBtn" title="Paid"
				onClick="action-gst-validate-invoice-items-list,action-gst-record-invoice-paid,save"
				hidden="true" showIf="statusSelect == 2" />
			<button name="cancelbtn" title="Cancel"
				onClick="action-gst-record-invoice-cancelled,save" hidden="true"
				showIf="statusSelect == 3" />
			<button name="draftbtn" title="Draft"
				onClick="action-gst-record-invoice-draft,save" hidden="true"
				showIf="statusSelect == 4" />
		</panel>
	</form>
	
	<action-method name="action-gst-method-invoice-get-reference">
	   <call class="com.axelor.gst.web.InvoiceController" method="setReference"/>
	</action-method>

	<action-record name="action-gst-record-get-invoice-details"
		model="com.axelor.gst.db.Invoice">
		<field name="invoiceItemsList" expr="eval: invoiceItemsList" />
		<field name="company" expr="eval: product_company" if="eval :product_company"/>
		<field name="party" expr="eval: product_party" />
	</action-record>

	<action-validate name="action-gst-validate-invoice">
		<error message="Please enter values"
			if="!(company &amp;&amp; party &amp;&amp; invoiceAddress)" />
	</action-validate>

	<action-record name="action-gst-record-invoice-form-default"
		model="com.axelor.gst.db.Invoice">
		<field name="invoiceDate" expr="eval:__time__" />
		<field name="statusSelect" expr="eval: __repo__(Invoice).STATUS_DRAFT" />
		<field name="company" expr="eval: __repo__(Company).all().fetchOne()" />
	</action-record>

	<action-method name="action-gst-method-invoice-calculate-invoice-items">
		<call class="com.axelor.gst.web.InvoiceController" method="setItems" />
	</action-method>

	<action-method name="action-gst-method-invoice-calculate-shipping-address">
		<call class="com.axelor.gst.web.InvoiceController" method="setShippingAddress" />
	</action-method>

	<action-method name="action-gst-record-invoice-calculate-party-values">
		<call class="com.axelor.gst.web.InvoiceController" method="setPartyValues" />
	</action-method>

	<action-record name="action-gst-record-invoice-calculate-party-values"
		model="com.axelor.gst.db.Invoice">
		<field name="invoiceAddress" expr="eval: party?.addressList[0]"
			if="party &amp;&amp; party?.addressList" />
		<field name="partyContact" expr="eval: party?.contactList[0].name"
			if="party &amp;&amp; party?.contactList &amp;&amp; party?.contactList[0].name" />
	</action-record>

	<action-record name="action-gst-record-invoice-validate"
		model="com.axelor.gst.db.Invoice">
		<field name="statusSelect" expr="eval: InvoiceRepository.STATUS_VALIDATED" />
	</action-record>

	<action-attrs name="action-gst-attrs-invoice-validate">
		<attribute for="company" name="readonly"
			expr="statusSelect == 2 &amp;&amp; statusSelect == 3" />
		<attribute for="invoiceDate" name="readonly"
			expr="statusSelect == 2 &amp;&amp; statusSelect == 3" />
		<attribute for="priority" name="readonly"
			expr="statusSelect == 2 &amp;&amp; statusSelect == 3" />
		<attribute for="party" name="readonly"
			expr="statusSelect == 2 &amp;&amp; statusSelect == 3" />
		<attribute for="partyContact" name="readonly"
			expr="statusSelect == 2 &amp;&amp; statusSelect == 3" />
		<attribute for="invoiceAddress" name="readonly"
			expr="statusSelect == 2 &amp;&amp; statusSelect == 3" />
		<attribute for="shippingAddress" name="readonly"
			expr="statusSelect == 2 &amp;&amp; statusSelect == 3" />
		<attribute for="isInvoiceAddress" name="readonly"
			expr="statusSelect == 2 &amp;&amp; statusSelect == 3" />
	</action-attrs>

	<action-validate name="action-gst-validate-invoice-items-list">
		<error message="Please insert at least 1 item" if="invoiceItemsList.size == 0" />
	</action-validate>

	<action-record name="action-gst-record-invoice-paid"
		model="com.axelor.gst.db.Invoice">
		<field name="statusSelect" expr="eval: InvoiceRepository.STATUS_PAID" />
	</action-record>

	<action-record name="action-gst-record-invoice-cancelled"
		model="com.axelor.gst.db.Invoice">
		<field name="statusSelect" expr="eval: InvoiceRepository.STATUS_CANCELLED" />
	</action-record>

	<action-record name="action-gst-record-invoice-draft"
		model="com.axelor.gst.db.Invoice">
		<field name="statusSelect" expr="eval: InvoiceRepository.STATUS_DRAFT" />
	</action-record>

	<action-method name="action-gst-method-invoice-set-attachment-path">
		<call class="com.axelor.gst.web.InvoiceController" method="setAttachmentPath" />
	</action-method>

	<action-report name="action-gst-report-invoice" design="invoice_report.rptdesign"
		output="so-${date}${time}" format="pdf">
		<param name="id" expr="eval: id" />
		<param name="AttachmentPath" expr="eval: AttachmentPath" />
	</action-report>

</object-views>