<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<grid name="product-grid" title="Product" model="com.axelor.gst.db.Product">
		<field name="name" />
		<field name="code" />
		<field name="hsbn" />
		<field name="category" />
		<field name="salePrice" />
		<field name="costPrice" />
		<field name="gstRate" />
	</grid>

	<form name="product-form" title="Product" model="com.axelor.gst.db.Product">
		<panel>
			<field name="image" title="Image" widget="image" />
		</panel>
		<panel>
			<field name="name" />
			<field name="code"/>
			<field name="hsbn" />
			<field name="category" onChange="action-gst-record-product-category-copy-gst" />
			<field name="salePrice" />
			<field name="costPrice" />
			<field name="gstRate" />
		</panel>
	</form>

	<action-record name="action-gst-record-product-category-copy-gst" model="com.axelor.gst.db.Product">
		<field name="gstRate" expr="eval:category?.gstRate" />
	</action-record>
	
	<cards name="product-cards" title="Cards View" model="com.axelor.gst.db.Party"
		orderBy="name">
		<field name="name" />
		<field name="code" />
		<field name="hsbn" />
		<field name="category" />
		<field name="gstRate" />

		<template><![CDATA[
 		 <div class="span4 card-image">
   		   <strong>{{name}}</strong>
         </div>
         <div class="span8">
           {{code}}<br>
           {{hsbn}}<br>
           <strong> {{category.name}}</strong><br>
           <abbr ng-if="gstRate" title="gstRate">GR:</abbr> {{gstRate}}<br>
         </div>
        ]]></template>
	</cards>

</object-views>
