<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<grid name="product-grid" title="Product" model="com.axelor.gst.db.Product">
		<field name="name" />
		<field name="code" />
		<field name="HSBN" title="HSBN"/>
		<field name="category" />
		<field name="salePrice" />
		<field name="costPrice" />
		<field name="gstRate" />
	</grid>

	<form name="product-form" title="Product" model="com.axelor.gst.db.Product">
		<panel>
			<field name="image" />
		</panel>
		<panel>
			<field name="name" required="true" />
			<field name="code" required="true" />
			<field name="HSBN" title="HSBN"/>
			<field name="category" />
			<field name="salePrice" />
			<field name="costPrice" />
			<field name="gstRate" />
		</panel>
	</form>

</object-views>
